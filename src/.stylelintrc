{
  "plugins": [
    "stylelint-prettier"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": true,
    "block-no-empty": null,
    "rule-empty-line-before": "always-multi-line",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "define-mixin",
          "mixin"
        ]
      }
    ]
  }
}
